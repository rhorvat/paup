@model PAUP.Models.Game;
@{
    ViewData["Title"] = "Detalji igre";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Uredi igru</h2>
<br>
<div class="row">
    <form class="form-signin" role="form" asp-action="EditGame" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <div class="col-md-6" style="min-height:400px; padding: 5px">
        <img src="@Model.ImgUrl" alt="Avatar" style="width:100%; padding:5px;">
        <input type="file" id="ImgUrl" name="Img" value="@Model.ImgUrl" class="form-control">
    </div>
    <div class="col-md-6" style="text-align: center;">
        
            <input value="@Model.Id" hidden>
            <label for="Name" class="sr-only-focusable">Ime</label>
            <input type="text" value="@Model.Name" name="Name" class="form-control" placeholder="Ime" required autofocus>
            <label class="red"><span asp-validation-for="Name"></span></label>

            <label for="Category" class="sr-only-focusable">Kategorija</label><br>
            <select id="Category" name="Category" va>
                <option value="0">Avanturisti훾ka</option>
                <option value="1">Akcijska</option>
                <option value="2">Sportska</option>
                <option value="3">Ostalo</option>
            </select>
            <br>
            <label for="Description" class="sr-only-focusable">Opis</label>
            <input rows="5" type="text" id="Description" name="Description" class="form-control" placeholder="Opis" autofocus>

            <label for="Price" class="sr-only-focusable">Cijena (HRK)</label>
            <input type="number" value="@Model.Price" name="Price" class="form-control" placeholder="Cijena" min="0" required autofocus>
            <label class="red"><span asp-validation-for="Price"></span></label>

            <label for="Amount" class="sr-only-focusable">Koli훾ina</label>
            <input type="number" min="0" value="@Model.Amount" name="Amount" class="form-control" placeholder="Koli훾ina" required>
            <label class="red"><span asp-validation-for="Amount"></span></label>

            <div class="checkbox mb-3">
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">A탑uriraj</button>
        </form>
    </div>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
        $(document).ready(function () {
            $("#Category option[value='@Model.Category']").attr("selected","selected");
            document.getElementById("Description").value = "@Model.Description";
            debugger;
        });
</script>